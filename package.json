{
  "name": "blog",
  "version": "1.0.0",
  "description": "short updates on what we do at CarbonPlan",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development next -p 4001",
    "build": "next build",
    "start": "next start",
    "format": "npm run format-js && npm run format-md",
