    "format-md": "prettier --write README.md 'posts/**/*.md' --parser mdx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonplan/blog.git"
  },
  "author": "carbonplan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carbonplan/blog/issues"
  },
  "homepage": "https://github.com/carbonplan/blog#readme",
  "dependencies": {
    "@carbonplan/components": "^8.1.1",
    "@carbonplan/theme": "^6.0.1",
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.2.3",
    "@theme-ui/color": "^0.10.0",
    "next": "^10.2.0",
    "react": "^16.14.0",
    "react-animate-height": "^2.0.23",
    "react-dom": "^16.14.0",
    "rehype-slug": "^4.0.1",
    "theme-ui": "^0.10.0"
  },
  "devDependencies": {
    "prettier": "2.3.0"
  }
